<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp">

                    <ImageView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:maxHeight="300dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feed_photo_1"/>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="@dimen/spacing_xsmall"
                        android:paddingBottom="@dimen/spacing_xsmall"
                        android:paddingLeft="@dimen/spacing_medium"
                        android:paddingRight="@dimen/spacing_medium">

                        <!--<TextView
                            android:id="@+id/description"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold" android:textColor="@android:color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:maxLines="2" android:ellipsize="end"/>
                            -->
                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:gravity="end"
                            android:src="@drawable/photo_female_2"/>

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingRight="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_weight="1" android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:maxLines="2" android:ellipsize="end"
                        android:text="@string/lorem_ipsum"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="24/07/2016" android:textColor="@color/grey_hard"
                        android:textSize="11sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingRight="@dimen/spacing_medium">

                    <LinearLayout
                        android:id="@+id/lyt_elements"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="13dp" android:layout_height="13dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_playlist_add_check_black_18dp"/>

                        <TextView
                            android:id="@+id/elements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_hard"
                            android:textSize="11sp"
                            style="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/database"/>

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textColor="@color/grey_hard"
                            android:textSize="11sp"
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:text="2000 F"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lyt_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingRight="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="13dp" android:layout_height="13dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_place_black_18dp"/>

                    <TextView
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_hard"
                        android:textSize="11sp"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/take_it"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        android:text="@string/i_take_it"/>

                </com.balysv.materialripple.MaterialRippleLayout>

                <!--<com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/visualize"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:clickable="true"
                        android:src="@drawable/ic_map_black_18dp"/>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/i_take"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:text="I take it"
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                </com.balysv.materialripple.MaterialRippleLayout>-->

            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>
